<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/container_details"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_catalog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/g_b_products"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_catalog_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Our sellers"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>

                <!--<Button
                    android:id="@+id/btn_preview"
                    android:text="Preview"
                    android:background="@drawable/orderlist_delete_button_bg"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Published"/>

                    <Switch
                        android:id="@+id/switch_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:id="@+id/tv_visitors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_eye"
                        android:layout_marginLeft="8dp"
                        android:text="100"
                        android:textSize="18sp"
                        android:drawablePadding="6dp"/>

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="12dp"
                        app:srcCompat="@drawable/ic_share"/>

                </LinearLayout>


            </LinearLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">
                <GridLayout
                    android:padding="8dp"
                    android:columnCount="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_prod_img1"
                        android:padding="2dp"
                        android:background="@drawable/ic_add_circle_black_24dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <ImageView
                        android:id="@+id/iv_prod_img2"
                        android:padding="2dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_add_circle_black_24dp" />
                    <ImageView
                        android:id="@+id/iv_prod_img3"
                        android:padding="2dp"
                        android:background="@drawable/ic_add_circle_black_24dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <ImageView
                        android:id="@+id/iv_prod_img4"
                        android:padding="2dp"
                        android:background="@drawable/ic_add_circle_black_24dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                </GridLayout>

                <TextView
                    android:id="@+id/tv_product_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/counter_text_bg"
                    android:padding="8dp"
                    android:text="100"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"/>

            </FrameLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/toolbar_dropshadow"/>

</LinearLayout>